block content

    - var sequence = ['Каталог', 'Светодиодные ленты']
    +breadCrumbs(sequence, 'totalWidth')


    main.mainContent
        .catalog.totalWidth

            h1.catalog__title.title--lg СВЕТОДИОДНЫЕ ЛЕНТЫ

            .catalog__leftSection                

                -
                    var leftProdList = [
                        'Декоративное светодиодное оформление',
                        'Ленты LUX smd 3528',
                        'Ленты LUX smd 5060 [+RGB]',
                        'Ленты LUX smd 2835',
                        'Ленты LUX smd 5630 [+ULTRA]',
                        'Ленты RGBW мультицвет, MIX белые',
                        'Ленты RGB бегущий огонь',
                        'Ленты фигурные [RZ,RV,DIP-LED]',
                        'Ленты LUX smd 335 боковое свечение',
                        'Ленты LUX smd 3014, 3020',
                        'Ленты NormaLed',
                        'Светодиодные листы',
                        'Коннкторы, клипсы'
                    ]

                .catalog__productList
                    ul.catalog__productItems
                        each item in leftProdList
                            li.catalog__productItem
                                a(href="#").catalog__productLink= item

                .filtersBtn Фильтры
                    +svgMix('filtersBtn__pic', 'list')

                -
