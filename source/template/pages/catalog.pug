                            ]
                        },
                        {
                            title: 'Ширина ленты, мм',
                            subMenuOptions: [
                                'какой-то пункт',
                                'какой-то пункт',
                                'какой-то пункт',
                                'какой-то пункт',
                                'какой-то пункт',
                                'какой-то пункт',
                                'какой-то пункт'
                            ]
                        }
                    ]
                
                form.catalog__options
                    .catalog__optionItems
                        each o, key in options
                            .catalog__option
                                .catalog__optionsTitleBox
                                    p.catalog__optionsTitle= o.title
                                    +svgMix('accordionIcon', 'next')
                                if key == 0
                                    .catalog__optionsItemList.catalog__optionsItemList--squard
                                        each m in o.subMenuOptions
                                            //- name and value задавать програмно backend
                                            label.catalog__optionsItem
                                                .catalog__optionsItemName= m
                                                input(type="checkbox" name="" value= m)
                                                +svgMix('catalog__optionsItemCheck', 'check-square')
                                else
                                    .catalog__optionsItemList
                                        each m in o.subMenuOptions
                                            //- name and value задавать програмно backend
                                            label.catalog__optionsItem
                                                .catalog__optionsItemName= m
                                                input(type="checkbox" name="" value= m)
                                                +svgMix('catalog__optionsItemCheck', 'check-square')
                                if key == 0
                                    .catalog__optionFindProductBox
                                        p.catalog__optionFindProductText Найдено товаров
                                        .catalog__optionFindProductCount 120
                                        a(href="#").catalog__optionFindProductShow Показать
                    .catalog__optionBtn
                        button.clear Очистить
                        button.accept Применить

            .catalog__mainSection
                .catalog__sorting
                    p.catalog__sortingText Сортирвать:
                    .catalog__sortingMenu
                        .catalog__sortingTitleBox
                            p.catalog__sortingTitle по названию
                            +svgMix('accordionIcon', 'next')
                        - var sortingItems = ['по названию','Рейтингу','Увелечению цены','Уменьшению цены']
                        ul.catalog__sortingList
                            each item, key in sortingItems
                                if key == 0
                                    li.catalog__sortingItem.catalog__sortingItem--current= item
                                else
                                    li.catalog__sortingItem= item

                

                .catalog__items
                    - for(var i = 0; i< 11; i++) {
                        .catalog__item
                            .catalog__itemArticle Артикул 11111

                            .catalog__itemPhotoBox
                                img(src="assets/img/catalogProduct.png", alt="product photo").catalog__itemPhoto

                            .catalog__itemSalesIndicator(style="background-color: #0003ff")
                            
                            .catalog__itemInfo
                                .catalog__itemName Лента светодиодная
                                .catalog__itemModel RT 2-5000 12V Yellow

                                .catalog__itemDetail
                                    block counter
                                        include ../common/counter
                                    .catalog__itemBuy
                                        button.catalog__itemBuyBtn В корзину
                                    .catalog__itemPrice 99,99 ₽
                                        
                                    .catalog__itemPDF
                                        a(href="#").catalog__itemPDFLink PDF
                    - }
                block pagination
                    include ../common/_pagination