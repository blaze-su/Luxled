block header
    header.header
        .header__topLine
            .totalWidth
                .header__shopInfo
                    p.header__shopCity г. Краснодар
                    h3.title--md.shopPhone 8 (928) 215-18-18
                    p.header__shopMode Пн-Пт с 09:00 до 18:00
                -
                    var menuItem = [
                        {title: 'О нас', link: '#'},
                        {title: 'Доставка и оплата', link: '#'},
                        {title: 'Партнерам', link: '#'},
                        {title: 'Контакты', link: '#'}
                    ]
                ul.header__navigation
                    each i in menuItem
                        li.header__navigationItem
                            a(href= i.link).header__navigationLink= i.title

        .header__mainContent
            .totalWidth
                .header__mainContentInner
                    a(href="/").logo
                        img.logo__pic(src="assets/img/LuxLed-Logo.svg", alt="Logotip")
                        p.logo__caption Светодиодное освещение

                    -
                        var headerMenuItems = [
                            'Светодиодные ленты',
                            'Источники питания',
                            'Управление светом',
                            'Алюминиевый профиль',
                            'Светодиодные светильники',
                            'Светодиодные лампы',
                            'Модули и линейки',
                            'Светодиодный декор',
                            'Светодиоды'
                        ]
                    .header__menu
                        button.header__catalogBtn
                            p.header__catalogBtnText Каталог
                            +svgMix('header__catalogBtnPic', 'list')
                        ul.header__menuList
                            each item in headerMenuItems
                                li.header__menuItem
                                    a.header__menuItemLink(href="#")= item
                                    ul.header__subMenu
                                        - for(var i = 0; i < 11; i++) {
                                            li.header__subMenuItem Светодиодный прожектор
                                        - }
                                    .header__menuItemAfter
                    .search
                        +svgMix('search__pic', 'magnifying-glass')
                        input(type="text" placeholder="Поиск по каталогу").search__field
                    
                    a(href="#").cart
                        +svgMix('cart__pic', 'shopping-cart')
                        p.cart__title Корзина пока пуста
                        span.cart__number

        .header__catalogBox
            -
                var catalogItem = [
                    {title: 'Светодиодные ленты', imgName: '1.png'},
                    {title: 'Блоки питания', imgName: '2.png'},
                    {title: 'Управление светом', imgName: '3.png'},
                    {title: 'Алюминиевые профили', imgName: '4.png'},
                    {title: 'Светодиодные светильники', imgName: '5.png'},
                    {title: 'Светодиодные прожекторы', imgName: '6.png'},
                    {title: 'Светодиодный декор', imgName: '8.png'},
                    {title: 'Модули и линейки', imgName: '7.png'},
                    {title: 'Светодиоды', imgName: '9.png'}
                ]
            .totalWidth
                ul.header__catalog
                    each i in catalogItem
                        li.header__catalogItem
                            a(href="#").header__catalogLink
                                .header__catalogItemPicBox
                                    img(src= 'assets/img/header__catalog/'+i.imgName, alt="?").header__catalogItemPic
                                p.header__catalogItemName= i.title